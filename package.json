{
  "name": "ezvoice",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "contentlayer2 build && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "contentlayer2 build && tsc --noEmit",
    "format": "bun prettier . --write",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "check": "pnpm lint && pnpm typecheck && pnpm format:check",
    "shadcn:add": "pnpm dlx shadcn-ui@latest add",
    "db:generate": "dotenv drizzle-kit generate:pg",
    "db:introspect": "dotenv drizzle-kit introspect",
    "db:push": "dotenv drizzle-kit push",
    "db:migrate": "dotenv tsx src/db/migrate.ts",
    "db:drop-migration": "drizzle-kit drop",
    "db:seed": "dotenv tsx src/db/seed.ts",
    "db:studio": "dotenv drizzle-kit studio",
    "email:dev": "email dev --dir src/components/emails -p 3001",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe --latest",
    "unlighthouse": "pnpm dlx unlighthouse --site https://ezvoice..io"
  },
